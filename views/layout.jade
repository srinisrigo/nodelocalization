doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='user-scalable=no, width=device-width, initial-scale=1, maximum-scale=1')
    title= __('index.title')
    link(rel='stylesheet', href='/stylesheets/style.css')
    block include

  body
    #headerdiv(style="float:right;")
      a(href='/users') user
      a(href='/chat') chat
      a(href='/setup/book') book
      select(id="ddli18n",onchange="window.location.href='/i18n/'+this.value+'?pathname='+location.pathname;")
        option(value='hi') हिन्दी
        option(value='bn') বাংলা
        option(value='te') తెలుగు
        option(value='mr') मराठी
        option(value='ta') தமிழ்
        option(value='gu') ગુજરાતી
        option(value='kn') ಕನ್ನಡ
        option(value='ml') മലയാളം
        option(value='pa') ਪੰਜਾਬ
        option(value='en') english
        option(value='ar') عربى
    #contentDiv
      block content
