extends ../../layout
block content
    table
        if books.length>0
            tr
                th
                    a(href="edit/-1") #{__('index.create')}
                th= __('setup.book.name')
                th= __('setup.book.author')
                th= __('setup.book.price')
            each book, index in books
                tr
                    td
                        a(href="book/edit/#{index}") #{__('index.edit')}
                    td= book.name
                    td= book.author
                    td= book.price
        else
            tr
                td= __('setup.book.nobooks')